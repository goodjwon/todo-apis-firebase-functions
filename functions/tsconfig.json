{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017"
    },
    "include": [
        "src/**/*",
        "jest.config.cjs"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "compileOnSave": true,
}
